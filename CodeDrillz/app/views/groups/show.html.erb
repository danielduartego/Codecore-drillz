<h2>Drill Group - <%= @group.name%></h2>

<p><%= @group.description%></p>

<% @group.categories.each do |cat| %>
  <%= cat.title%>
<% end %>
<p class="text-right">

  <%= link_to fa_icon("pencil-square-o"), edit_group_path(@group), class: "icon-big" %>
  <%= link_to fa_icon("trash-o"), group_path(@group), method: :delete, class: "icon-big",
                                                  data: {confirm: "Are you sure ?"} %>
</p>

<table class="table table-striped">
  <tbody>
    <% @group.drills.each do |drill| %>
    <tr>
      <td>
        <%= drill.description %>
      </td>
      <td style="text-align: right">
        <%= link_to fa_icon("pencil-square-o"), edit_group_drill_path(@group, drill), class: "icon-big"  %>
        <%= link_to fa_icon("trash-o"), group_drill_path(@group, drill),
                    method: :delete, data: {confirm: "Are you sure?"}, class: "icon-big"  %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>


<div class="text-right">
  <%= link_to "Create a new Drill", new_group_drill_path(@group), class:"btn2 btn-success" %>
</div>
