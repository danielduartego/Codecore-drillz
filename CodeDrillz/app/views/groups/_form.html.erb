<%= @group.errors.full_messages.join(", ") %>

<div class="form-horizontal">

  <!-- <fieldset> -->

  <!--  form  -->
    <%= form_for @group do |f|  %>

      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :description%>
        <%= f.text_area :description, class: "form-control"%>
      </div>
      <div class="form-group">
        <%= f.radio_button("level", "1") %>
        <%= f.label :level, "Beginner", :value => "1" %>

        <%= f.radio_button("level", "2") %>
        <%= f.label :level, "Intermediate", :value => "2" %>

        <%= f.radio_button("level", "3") %>
        <%= f.label :level, "Advanced", :value => "3" %>

      </div>

      <!-- Using dummy for now since we are not sure about badges -->
      <div class="form-group">

        <%= f.collection_radio_buttons(:badge, Merit::Badge.all, :id, :custom_fields) do |b|
            b.label {
               b.radio_button + image_tag(b.object.custom_fields[:url], width: 50)
            }
        end %>

      </div>
      <div class="form-group">
        <%= f.label :points%>
        <%= f.text_field :points, class: "form-control"%>
      </div>
      <div class="form-group">
      <%= f.label :categories%>
      <%#= f.collection_check_boxes :category_ids, Category.order(:title), :id, :title    %>
      <%= f.collection_select(:category_ids, Category.all, :id, :title, {}, multiple: true, class: "form-control", id:"chosen-select", "data-placeholder" => "Add Categories") %>
      </div>
      <div class="form-group">
        <%= f.submit "Save", class: "btn2 btn-success" %>
      </div>
    <% end %>

  <!-- </fieldset> -->
</div>
