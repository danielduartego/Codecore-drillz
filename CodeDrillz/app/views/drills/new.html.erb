<div class="col-md-10 col-md-offset-1 top-20">
  <h1 class="oswald font-37">CREATE DRILLS</h1>
  <div class="form-wall">
    <%#= @drill.errors.full_messages.join(", ") %>

    <div class="form-horizontal">
      <!-- <fieldset> -->

      <!--  form  -->
      <%= form_for [@group, @drill] do |f|  %>
      <div class="form-group">
        <%= f.label :description%>
        <%= f.text_area :description, class: "form-control"%>
      </div>
      <div class="form-group">
        <%= f.radio_button("type", "1") %>
        <%= f.label :type, "Exact Match", :value => "1" %>
        <%= f.radio_button("type", "2") %>
        <%= f.label :type, "Regular Expression", :value => "2" %>
        <%= f.radio_button("type", "3") %>
        <%= f.label :type, "Test (Rspec / Jasmine)", :value => "3" %>
      </div>
      <div class="form-group text-right">
        <%= f.submit "Save", class: "btn2 btn-danger" %>
      </div>
      <% end %>

      <!-- </fieldset> -->
    </div>
  </div>
</div>
